<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/colorwhite">

    <TextView
        android:id="@+id/comment_musicname"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/comment_musicimage"
        >
    </TextView>

    <ImageView
        android:id="@+id/comment_musicimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        />
    <RatingBar
        android:id="@+id/forum_ratingbar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:isIndicator="true"
        android:progressTint="@color/colorgreen"
        style="@style/Widget.AppCompat.RatingBar.Small"
        app:layout_constraintBottom_toTopOf="@id/comment_from"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/comment_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/comment_musicimage"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/comment_dianzan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="10dp"
        android:background="@drawable/dianzan"
        app:layout_constraintTop_toBottomOf="@id/comment_details"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/comment_dianzan"
        app:layout_constraintBottom_toTopOf="@id/comment_dianzan"
        app:layout_constraintLeft_toRightOf="@id/comment_dianzan"/>
    <TextView
        android:id="@+id/comment_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来自"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/comment_dianzan"
        app:layout_constraintRight_toLeftOf="@id/comment_authorname"/>

    <TextView
        android:id="@+id/comment_authorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/comment_dianzan"/>
</androidx.constraintlayout.widget.ConstraintLayout>