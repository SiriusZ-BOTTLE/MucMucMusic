<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <ImageView
        android:id="@+id/title_exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/guanbi"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/title_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写评价"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@id/title_exit"
        app:layout_constraintLeft_toRightOf="@id/title_exit"
        app:layout_constraintRight_toLeftOf="@id/title_add"/>


    <Button
        android:id="@+id/title_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorgreen"
        android:text="发表"
        android:textColor="@color/colorwhite"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@id/title_exit"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>