<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />



    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textColor="@color/colorRed"
        android:text="消愁"
        app:layout_constraintLeft_toRightOf="@id/song_image"
        app:layout_constraintTop_toTopOf="@id/song_image"/>



    <TextView
        android:id="@+id/song_author"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textColor="@color/colorRed"
        android:text="毛不易"
        app:layout_constraintLeft_toRightOf="@id/song_image"
        app:layout_constraintBottom_toBottomOf="@id/song_image"/>

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_favorite_border_red_400_18dp"
        app:layout_constraintTop_toBottomOf="@id/song_image"
        app:layout_constraintBottom_toTopOf="@id/song_image"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>