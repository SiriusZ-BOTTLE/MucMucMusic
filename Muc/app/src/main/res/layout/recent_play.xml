<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/line1"
        android:layout_height="2px"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:background="@color/colorgray"
        app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/recent_play_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@drawable/recentplay"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/recent_play_text"
            android:layout_width="330dp"
            android:layout_height="35dp"
            android:layout_marginLeft="27dp"
            android:text="最近播放"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@id/recent_play_image"
            app:layout_constraintLeft_toRightOf="@id/recent_play_image"/>
        <View
            android:id="@+id/line2"
            android:layout_height="2px"
            android:layout_width="match_parent"
            android:background="@color/colorgray"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/recent_play_text"
            />


</androidx.constraintlayout.widget.ConstraintLayout>