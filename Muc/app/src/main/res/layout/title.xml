<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorRed">

  <ImageView
      android:id="@+id/title_yuyin"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/yuyin"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"/>

  <SearchView
      android:id="@+id/title_sousuo"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/searchview_shape"
      android:queryHint="请输入搜索内容"
      app:layout_constraintTop_toTopOf="@id/title_yuyin"
      app:layout_constraintLeft_toRightOf="@id/title_yuyin"
      app:layout_constraintRight_toLeftOf="@id/title_bofang">
  </SearchView>

  <ImageView
      android:id="@+id/title_bofang"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/bofang"
      android:layout_marginRight="20dp"
      app:layout_constraintTop_toTopOf="@id/title_yuyin"
      app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>